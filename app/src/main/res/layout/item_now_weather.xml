<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_time_compat"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="18:00"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_now_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_temp_compat"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="11℃"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_now_pop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="45%"
            android:textColor="#fff"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/info_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_now_wind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_wind_dir_compat"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="西北风"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>