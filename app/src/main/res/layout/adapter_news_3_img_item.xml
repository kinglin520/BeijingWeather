<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/background_color_secondary"
    app:cardCornerRadius="@dimen/padding_size_s"
    app:cardElevation="2dp"
    app:contentPadding="@dimen/padding_size_l">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title_tv"
            style="@style/news_title_style" />

        <LinearLayout
            android:id="@+id/news_picture_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_picture_1_iv"
                style="@style/news_group_picture" />

            <ImageView
                android:id="@+id/news_picture_2_iv"
                style="@style/news_group_picture"
                android:layout_marginLeft="@dimen/padding_size_l"
                android:layout_marginRight="@dimen/padding_size_l"
                />

            <ImageView
                android:id="@+id/news_picture_3_iv"
                style="@style/news_group_picture" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/news_ptime_tv"
                style="@style/news_footer_style"
                android:layout_gravity="right"
                />

            <TextView
                android:id="@+id/news_source_tv"
                style="@style/news_footer_style"
                android:layout_gravity="left"
                />
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>